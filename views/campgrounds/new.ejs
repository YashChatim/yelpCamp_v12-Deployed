<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>

        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST"> <!-- action is campgrounds which is the route -->
                <div class="form-group"> 
                    <input class="form-control" type="text" name="name" placeholder="camp name">
                </div>
            
                <div class="form-group"> <!-- form-group groups things together and gives some spacing -->
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="1" step="0.5"> <!-- min - minimum value that can be added, step - up-down arrow which allows to increase/decrease price by 0.5 -->
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button> <!-- btn-block makes the button take entire line -->
                </div>
            </form>
            <a href="/campgrounds">Back</a>
            
        </div>
    </div>
</div>

<% include ../partials/footer %>